name: Build Containers and Publish to GHCR (Manual Trigger)

on:
  workflow_dispatch:

permissions:
  contents: read
  packages: write

jobs:
  changes:
    name: Find Containers to build
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4     
      # Check which Containers have changed files (find all for manual run)
      - uses: dorny/paths-filter@v3
        id: changes
        with:
          filters: .github/filters.json
          # For manual run, you might want to build all, so override outputs if needed
    outputs:
      changes: ${{steps.changes.outputs.changes}}

  build:
    name: Build Job
    needs: changes
    if: ${{ needs.changes.outputs.changes != '[]'}}
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        name: ${{fromJson(needs.changes.outputs.changes)}}

    steps:
      - name: ⬇️ Set up code
        uses: actions/checkout@v4

      - name: 📁 Get Working Dir
        run: |
          docker_dir="$(cat .github/filters.json | jq '."${{matrix.name}}"' | tr -d '**\n"')"
          echo DOCKERFILE_DIR=${docker_dir} >> $GITHUB_ENV

      - name: 🐳 Set up Docker Buildx
        id: builder
        uses: docker/setup-buildx-action@v3

      - name: 🗝️ Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: 🏷️ Set tags for GHCR
        id: meta
        run: |
          IMAGE_REPO="ghcr.io/${{ github.repository }}/${{ matrix.name }}"
          echo "IMAGE_TAGS=${IMAGE_REPO}:${{ github.sha }},${IMAGE_REPO}:latest" >> $GITHUB_ENV

      - name: 📦 Build and push image (non-WebUI)
        uses: docker/build-push-action@v6
        if: ${{ matrix.name != 'atspm-webui'}}
        with:
          builder: ${{ steps.builder.outputs.name }}
          tags: ${{ env.IMAGE_TAGS }}
          context: Atspm/
          file: ${{ env.DOCKERFILE_DIR }}/Dockerfile
          push: true
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: 📦 Build and push image WebUI
        uses: docker/build-push-action@v6
        if: ${{ matrix.name == 'atspm-webui'}}
        with:
          builder: ${{ steps.builder.outputs.name }}
          tags: ${{ env.IMAGE_TAGS }}
          context: ${{ env.DOCKERFILE_DIR }}
          push: true
          cache-from: type=gha
          cache-to: type=gha,mode=max
