{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Perdue Coordination Diagram",
  "description": "Perdue Coordination Diagram chart",
  "type": "object",
  "properties": {
    "chartName": { "type": "string" },
    "signalId": { "type": "string" },
    "signalLocation": { "type": "string" },
    "phaseNumber": { "type": "integer" },
    "phaseDescription": { "type": "string" },
    "start": { "type": "string" },
    "end": { "type": "string" },
    "totalOnGreenEvents": { "type": "integer" },
    "totalDetectorHits": { "type": "integer" },
    "percentArrivalOnGreen": { "type": "number" },
    "plans": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "planNumber": { "type": "string" },
          "startTime": { "type": "string" },
          "endTime": { "type": "string" },
          "percentArrivalOnGreen": { "type": "number" },
          "percentGreenTime": { "type": "number" },
          "platoonatio": { "type": "number" }
        }
      }
    },
    "volumePerHour": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "startTime": "string",
          "volume": "number"
        }
      }
    },
    "greenEvents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "startTime": "string",
          "seconds": "number"
        }
      }
    },
    "yellowEvents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "startTime": "string",
          "seconds": "number"
        }
      }
    },
    "redEvents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "startTime": "string",
          "seconds": "number"
        }
      }
    },
    "detectorActivations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": "string",
          "seconds": "number"
        }
      }
    }
  }
